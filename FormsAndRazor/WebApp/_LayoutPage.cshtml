<!DOCTYPE html>

<html lang="en-us">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/myStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <!--you can also use 'container' to center the content -->
        <!-- this will be the menu area -->
        <div class="navbar navbar-default navbar-fixed-top">
            <!-- this will be the title on the menu (brand)-->
            <div class="navbar-header">
                <a class="navbar-brand" style="font-size:x-large">
                    <strong>Razor Samples</strong></a>
            </div>
            <!-- this will be the menu root items-->
            <ul class="nav navbar-nav">
                <!-- this will be a menu item -->
                <li><a href="@Href("~/default.cshtml")">Home</a></li>
                <!--Creating a dropdown nenu-->
                <li class="dropdown">
                    <!--This will be the menu root item for the dropdown-->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Controls
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Href("~/Controls/textboxes.cshtml")">TextBox</a></li>
                        <li><a href="@Href("~/Controls/radiobuttonlist.cshtml")">RadioButton</a></li>
                        <li><a href="@Href("~/Controls/checkboxes.cshtml")">CheckBox</a></li>
                        <li><a href="@Href("~/Controls/dropdownlist.cshtml")">DropdownList</a></li>
                    </ul>
                </li>
                
            </ul>
        </div>
        <br /><br />
        <div class="jumbotron">
            @RenderSection("banner", required: true)
        </div>
        @RenderBody()

        <br />
        <hr style="line-height:5px" />
        @RenderSection("footer", required: false)

    </div>
</body>
</html>
