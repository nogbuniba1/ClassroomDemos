<!DOCTYPE html>

<html lang="en-us">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/myStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <!--you can also use 'container' to center the content -->

        <!--RenderPage() will physically bring in the referenced page and place the code in the location-->
        @RenderPage("_Menu.cshtml")
        <br /><br />

        <div class="jumbotron">
            @RenderSection("banner", required: true)
        </div>
        @RenderBody()

        <br />
        <hr style="line-height:5px" />
        @RenderSection("footer", required: false)

    </div>
</body>
</html>
