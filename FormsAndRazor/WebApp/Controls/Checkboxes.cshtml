@{
    Page.Title = "Checkboxes";
    Layout = "~/_LayoutPage.cshtml";
}

@section banner{
    <h1>CheckBoxes</h1>
}

@if (IsPost)
{
    //the variable will contain a list of all the checkboxes, that were selected by the user
    var choice = Request.Form["CheckBoxGroup"];
    //validate that at least one checkbox was turned on
    if (choice.IsEmpty())
    {
        <p><span style="color:firebrick">Make a selection from list of platform choices</span></p>
        }
        else
        {
            //set-up the delimiter as a character for use in divinding the set of values that will be returned from the set of checkboxes
            //Characters are defined with single quotes ''
            char[] delimiter = {','};

        //Use the .Split(delimiter) method to split up the return string.
        //This method returns a string array that contains the substrings in the stringinstance that are delimited by the elements of a specified string or unicode character array
        // To loop, use the foreach loop as it controls the number of passes and will terminate when there is no more data to seperate
        <p>
            I see you like to use the following platform:
            <ul>
                @foreach(var platform in choice.Split(delimiter))
                {
                    <li>@platform</li>
                }
            </ul>
        </p>
    }
}


<div>
    <form id="theForm" action="" method="post">
        <div class="col-md-offset-1">
            <label id="forCheckboxGroup"> Select your favorite gaming platform</label><br />
            <input type="checkbox" name="CheckBoxGroup" value="PS4" />&nbsp; PS4 <br />
            <input type="checkbox" name="CheckBoxGroup" value="PC" />&nbsp; PC <br />
            <input type="checkbox" name="CheckBoxGroup" value="XBox One" />&nbsp; XBox One <br />
            <input type="checkbox" name="CheckBoxGroup" value="Nintendo 3DS" />&nbsp; 3DS <br />
            <input type="checkbox" name="CheckBoxGroup" value="Cell" />&nbsp; Cellphone <br />
            <input type="checkbox" name="CheckBoxGroup" value="iPad" />&nbsp; iPad <br />
            <input type="checkbox" name="CheckBoxGroup" value="WII" />&nbsp; WII <br />
            <br />

            <button type="submit" name="formButton" value="submit" class="btn btn-primary"> Submit</button>
        </div>

    </form>
</div>


